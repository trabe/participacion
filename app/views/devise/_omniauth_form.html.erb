<% if current_page?(new_user_session_path) %>
  <%= link_to t("omniauth.cas.sign_in"), user_omniauth_authorize_path(:cas), class: "button-cas button radius expand" %>
  <hr/>
<% elsif current_page?(new_user_registration_path) %>
  <%= link_to t("omniauth.cas.sign_up"), user_omniauth_authorize_path(:cas), class: "button-cas button radius expand" %>
  <hr/>
<% end %>
