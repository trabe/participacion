<header class="<%= header_css %>">
  <section class="top-links">
    <div class="row">
      <%= render 'shared/locale_switcher' %>
    </div>
  </section>

  <div class="contain-to-grid clear">
    <nav class="top-bar" data-topbar>
      <ul class="title-area">
        <li class="name">
          <%= link_to root_path do %>
            <%= image_tag('header_logo_udc.png', class: 'left', alt: t("layouts.header.logo")) %>
            <%= t("layouts.header.open_gov", open: "<strong>#{t('layouts.header.open')}</strong>").html_safe %>
            <span>|</span>
            <span class="logo-site"><%= t("admin.dashboard.index.title") %></span>
          <% end %>
        </li>
        <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
      </ul>

      <section class="top-bar-section">
        <%= render 'devise/menu/login_items' %>
        <%= render 'shared/admin_login_items' %>
      </section>
    </nav>
  </div>
</header>
