<h2><%= t("welcome.welcome.title") %></h2>

<div class="user-permissions">

  <p><%= t("welcome.welcome.user_permission_info") %></p>

  <ul>
    <li><i class="icon-check"></i>&nbsp;<%= t("welcome.welcome.user_permission_debates") %></li>
    <li>
      <% if current_user.level_two_or_three_verified? %>
        <span class="icon-check"></span>
      <% else %>
        <span class="icon-x"></span>
      <% end %>
      <%= t("account.show.user_permission_proposal") %>
    </li>
    <li>
      <% if current_user.level_two_or_three_verified? %>
        <span class="icon-check"></span>
      <% else %>
        <span class="icon-x"></span>
      <% end %>
      <%= t("account.show.user_permission_support_proposal") %>
    </li>
    <li>
      <% if current_user.level_three_verified? %>
        <span class="icon-check"></span>
      <% else %>
        <span class="icon-x"></span>
      <% end %>
      <%= t("account.show.user_permission_votes") %>
    </li>
  </ul>

  <p>
    <span><%= t("welcome.welcome.user_permission_verify_info") %></span>
  </p>

  <p class="text-medium text-center">
    <%= t("account.show.user_permission_verify") %>
  </p>

  <p class="text-center">
    <%= link_to t("welcome.welcome.go_to_index"), proposals_path , class: "button success radius" %>
  </p>
</div>
